<div id="views">
  <h2 class="table-title">{{t views.main.yourViews}}</h2>
  {{#if view.views.length}}
    <table class="table table-hover views-table">
      <tbody>
        {{#each instance in view.views}}
          {{#if instance.visible}}
            <tr {{action "setView" instance target="controller"}}>
              <td class="icon">
                <a class="view-icon-image"><img {{bindAttr src="instance.iconPath"}}></a>
              </td>
              <td class="label-version-description">
                <h4 class="view-label-text">{{instance.label}} <small class="view-version-text"> &nbsp;&nbsp;({{instance.version}})</small></h4>
                <p class="view-description-text">{{instance.description}}</p>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="muted no-views-text background-text">{{t views.main.noViews}}</div>
  {{/if}}
</div>
