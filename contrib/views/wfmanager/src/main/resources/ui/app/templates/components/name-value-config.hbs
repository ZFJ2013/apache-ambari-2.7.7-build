<div id="nameValuePair">
  {{#each configuration.property as |property index|}}
  {{#if (not property.static)}}
  <div class="form-group">
    <label class="control-label col-xs-2 {{if (not-eq index 0) 'visibility-hidden'}}">Name</label>
    <div class=" col-xs-3">
      {{input type="text" class="form-control" value=property.name placeholder="name"}}
    </div>
    <label class="control-label col-xs-1 {{if (not-eq index 0) 'visibility-hidden'}}">Value</label>
    <div class=" col-xs-3">
      {{input class="form-control" type="text" value=property.value placeholder="value"}}
    </div>
    <div class="col-xs-1">
      <input class="form-control btn btn-danger" type="button" {{action "deleteProperty" index}} value="-">
    </div>
  </div>
  {{/if}}
  {{/each}}
  <div class="form-group">
    {{#if configuration.property}}
      <label class="control-label col-xs-2 visibility-hidden">Name</label>
    {{else}}
      <label class="control-label col-xs-2">Name</label>
    {{/if}}
    <div class=" col-xs-3">
      {{input type="text" class="form-control" name="name" value=propertyName placeholder="name"}}
    </div>
    {{#if configuration.property}}
      <label class="control-label col-xs-1 visibility-hidden">Value</label>
    {{else}}
      <label class="control-label col-xs-1">Value</label>
    {{/if}}
    <div class=" col-xs-3">
      {{input class="form-control" type="text" indValidations="required"  name="value" value=propertyValue placeholder="value"}}
    </div>
    <div class="col-xs-1">
      <input class="form-control btn btn-secondary" type="button" {{action "addProperty"}} value="+">
    </div>
  </div>
</div>
